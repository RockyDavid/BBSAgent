<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PTT Client</title>
  <style>
    html, body {
      padding: 0;
      margin: 0;
      background-color: #000;
    }
    @font-face {
        font-family: 'uming';
        src: url('/fonts/uming.ttc') format('truetype');
        font-weight: normal;
    }
    #output {
      width: 100%;
      height: 100%;
      font-family: 'uming';
      color: #FFF;
      background-color: #000;
      white-space: pre;
      line-height: 15px;
      zoom: 2.2;
    }
    #Command {
      position: absolute;
      display: flex;
      width: 100%;
      height: 30px;
    }
    #Command > input {
      background: white;
      height: 30px;
      line-height: 30px;
      font-size: 18px;
      border: none;
      width: calc(100% - 120px);
    }
    #Command > button {
      height: 32px;
      line-height: 30px;
      font-size: 18px;
      border: none;
      width: 118px;
    }
  </style>
</head>
<body>
  <div id="output"></div>
  <div id="Command">
    <input type="text" id="input" placeholder="" />
    <button onclick="sendCommand()">Send</button>
  </div>
  <script>
    const ws = new WebSocket('.');

    const output = document.getElementById('output');

    ws.onopen = () => {
      console.log('Connected to WebSocket server');
    };

    ws.onmessage = (event) => {
      output.innerHTML = event.data;
    };

    function sendCommand() {
      const input = document.getElementById('input').value;
      ws.send(input);
      document.getElementById('input').value = '';
    }

    window.onbeforeunload = closingCode;
    function closingCode(){
      //ws.send('/q');
      return null;
    }


    const spKeys = [33, 34, 37, 38, 39, 40];
    const input = document.getElementById('input');
    document.addEventListener('keyup', (e) => {
      e.preventDefault();
      var event = window.event ? window.event : e;
      console.log(event)
      if(spKeys.includes(event.keyCode))
      {
        ws.send(e.code);
        return;
      }
    });
    input.addEventListener('keyup', (e) => {
      e.preventDefault();
      var event = window.event ? window.event : e;
      if(event.keyCode === 13) //enter
      {
        sendCommand();
        return;
      }
    });
  </script>
</body>
</html>